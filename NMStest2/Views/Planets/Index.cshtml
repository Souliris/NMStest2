@model IEnumerable<NMStest.Models.Planet>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PlanetName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sentinels)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasAcientBones)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasSalvageScrap)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlanetName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sentinels)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasAcientBones)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasSalvageScrap)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PlanetId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PlanetId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PlanetId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
